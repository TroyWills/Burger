<div class="container" id="header">
  <h1 id="burgerHeader">Burgers:</h1>
</div>

<br>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2 id="devourForm">Input burger i'd like to devour:</h2>

      {{!-- Form to submit burger to devour --}}
      <input type="text" class="form-control" placeholder="Insert burger here">

      {{!-- Submit button for burger to devour --}}
      <button class="submitButton">Submit</button>
    </div>
  </div>
</div>

<br>


<div class="container">
  <div class="row">
    <div class="burgersDevoured">
    </div>
  </div>
</div>

<br>

<div class="container">
  <div class="row">

    <div class="burgersData col-md-6">
      <h3 id="dataHeader">Burgers I'd Like to Devour</h3>
    </div>

    <div class="burgersData col-md-6">
      <h3 id="dataHeader">Burgers I've Devoured:</h3>

      <ul>
        {{#each burgers}}
          {{!-- {{#unless this.devoured}} --}}
            <div>
              <li>
                {{this.burger_name}}
              </li>
            </div>
          {{!-- {{/unless}} --}}
        {{/each}}
      </ul>

    </div>

  </div>
</div>